package Cartes;

public class CroyantIllusionnistes extends Croyant{
	
	public CroyantIllusionnistes(String nom, boolean ta[])
	{
		this.nom=nom;
		this.capacite="Vous bénéficiez de la capacité spéciale de sacrifice d'une carte de Croyants appartenant à une autre Divinité. La carte en question reste en jeu.";
		this.cosmologie="Nuit";
		this.dogmes=ta;
		this.nbCroyants=4;
		
	}
}
