package Cartes;

public class CroyantErmite extends Croyant {

	public CroyantErmite(String nom, boolean ta[])
	{
		this.nom=nom;
		this.capacite="Impose le sacrifice d'un Croyant d'un autre joueur qui choisiti la carte. La capacite spéciale du sacrifice est jouée";
		this.cosmologie="Jour";
		this.dogmes=ta;
		this.nbCroyants=1;
		
	}
	
}
