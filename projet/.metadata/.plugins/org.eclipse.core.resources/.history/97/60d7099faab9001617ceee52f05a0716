package jeu;

public class CroyantRevolutionnaires extends Croyant{

	public CroyantRevolutionnaires(String nom, boolean ta[])
	{
		
		this.setNom(nom);
		this.setCapacite("Imposez le sacrifice d'une carte de Croyants à autant de Divinités que vous le voulez. Chaque Divinité choisit la carte à sacrifier. Les capacités spéciales sont jouées.");
		this.setDescriptionCapacite("Imposez le sacrifice d'une carte de Croyants à autant de Divinités que vous le voulez. Chaque Divinité choisit la carte à sacrifier. Les capacités spéciales sont jouées.");
		this.setCosmologie("Néant");
		this.setDogmes(ta);
		this.setNombreDeCroyants(2);
		
	}
}
